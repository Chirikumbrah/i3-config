### BORDER 
default_border pixel 2
default_floating_border pixel 2
smart_borders on

### GAPS
gaps inner 5
gaps outer 5



### SET VARIABLES
set $mod Mod4
set $browser chromium
# set $term kitty
set $term alacritty

# set $up Up
# set $down Down
# set $left Left
# set $right Right

set $up k
set $down j
set $left h
set $right l



### FONT FOR WINDOW TITLES
font pango: DejaVu Sans Mono, Font Awesome 5 Free Solid 10
 


### VOLUME CONTROLS
bindsym XF86AudioMute          exec --no-startup-id      amixer sset 'Master'  toggle     && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume   exec --no-startup-id      amixer sset 'Master'  3%- unmute && pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume   exec --no-startup-id      amixer sset 'Master'  3%+ unmute && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMicMute       exec --no-startup-id      amixer sset 'Capture' toggle     && pkill -RTMIN+10 i3blocks



### BRIGHTNESS CONTROLS
bindsym XF86MonBrightnessUp    exec --no-startup-id      pkill -RTMIN+9 i3blocks
bindsym XF86MonBrightnessDown  exec --no-startup-id      pkill -RTMIN+9 i3blocks



### APP SHORTCUTS
#           KEY                                           APP
bindsym     $mod+Shift+w         exec                     $browser           
bindsym     $mod+Shift+f         exec                     pcmanfm-qt          

# SCREENSHOT
bindsym     --release $mod+Print exec --no-startup-id     scrot -z -d 1 ~/yrData/images/screenshots/'%d-%m-%Y_%H:%M:%S_$wx$h.png' && notify-send "Screenshot saved" -u low

# PARTIAL SCREENSHOT
bindsym     --release Print      exec --no-startup-id     scrot -z -s -d 1 ~/yrData/images/screenshots/'%d-%m-%Y_%H:%M:%S_$wx$h.png' && notify-send "Partial screenshot saved" -u low
bindsym     $mod+shift+t         exec --no-startup-id     telegram-desktop
bindsym     $mod+space           exec --no-startup-id     rofi -show drun    

## CLIPBOARD MENU
bindsym     mod1+c               exec --no-startup-id     CM_LAUNCHER=rofi clipmenu

# bindsym     $mod+space           exec --no-startup-id     dmenu_run -b -fn 'Font Awesome 5 Free Solid 9' -nb '#0f0210' -nf '#adadad' -sb '#4b0082' -sf '#ffffff' 



### CONSOLE APPS SHORTCUTS

## TERMINAL
bindsym     $mod+Return          exec --no-startup-id     $term   

## SYSTEM MONITOR
bindsym     $mod+Escape          exec --no-startup-id     $term --class htop    -e htop  

## STORAGE ANALYZER
bindsym     $mod+shift+d         exec --no-startup-id     $term --class ncdu    -e ncdu  

## TEXT EDITOR
bindsym     $mod+shift+l         exec --no-startup-id     $term --class lvim    -e lvim  
bindsym     $mod+shift+n         exec --no-startup-id     $term --class nvim    -e nvim  

## FILE MANAGER
bindsym     $mod+shift+r         exec --no-startup-id     $term --class ranger  -e ranger 

## CALCULATOR
bindsym     $mod+shift+c         exec --no-startup-id     $term --class bc      -e bc           



### DRAGGING FLOATING WINDOWS
floating_modifier $mod

### CLOSE WINDOW
bindsym     $mod+x             kill

### CHANGE FOCUS
bindsym     $mod+$left           focus left
bindsym     $mod+$down           focus down
bindsym     $mod+$up             focus up
bindsym     $mod+$right          focus right

### RESIZING WINDOWS
bindsym     $mod+Shift+$left     resize shrink width  10 px or 10 ppt
bindsym     $mod+Shift+$down     resize grow   height 10 px or 10 ppt
bindsym     $mod+Shift+$up       resize shrink height 10 px or 10 ppt
bindsym     $mod+Shift+$right    resize grow   width  10 px or 10 ppt

### MOVE FOCUSED WINDOW
bindsym     $mod+Ctrl+$left      move left  20px
bindsym     $mod+Ctrl+$down      move down  20px
bindsym     $mod+Ctrl+$up        move up    20px
bindsym     $mod+Ctrl+$right     move right 20px

### SPLIT VERTICAL
bindsym     $mod+v             split v

### FULLSCREEN / STICKY
bindsym     mod1+f             fullscreen toggle    
bindsym     mod1+s             sticky toggle

### RELOAD CONF / RESTART i3
bindsym     mod1+r             reload               
bindsym     $mod+r             restart  

### FLOATING TOGGLE
bindsym     $mod+f             floating toggle

### STACKING / TABBED / TOGGLE SPLIT
bindsym     $mod+s             layout stacking      
bindsym     $mod+w             layout tabbed        
bindsym     $mod+e             layout toggle split  

### CHANGE FOCUS
bindsym     $mod+d             focus mode_toggle    
bindsym     $mod+p             focus parent         
bindsym     $mod+c             focus child          



### POWER MENU
set $session " (l)   (e)   (r)   (s)"
mode  $session {
	bindsym e              exec --no-startup-id i3-msg exit;     mode "default"
    bindsym l              exec --no-startup-id ~/.scripts/lock; mode "default"
    bindsym s              exec --no-startup-id sudo poweroff;   mode "default"
    bindsym r              exec --no-startup-id sudo reboot;     mode "default"
    bindsym q              mode "default"
    bindsym Escape         mode "default"
}

bindsym mod1+x mode $session



